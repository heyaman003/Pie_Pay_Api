generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Offer {
  id                 Int      @id @default(autoincrement())
  title              String
  description        String
  bankName           String
  discountType       String   // 'FLAT' or 'PERCENTAGE'
  discountValue      Float
  paymentInstruments String[] // ["CREDIT", "EMI"]
  validity           String?  // e.g., "2024-07-01 to 2024-07-31"
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([title, description, bankName, discountType, discountValue, validity])
}
